theorem abs_div(a: Rat, b: Rat) {
    b != Rat.0 implies
    (a / b).abs = a.abs / b.abs
} by {
    if a.is_negative {
        a.abs = -a
        if b.is_negative {
            (a / b).is_positive
            (a / b).abs = a / b
            b.abs = -b
            a.abs / b.abs = (-a) / (-b)
            (-a) / (-b) = a / b
            (a / b).abs = a.abs / b.abs
        } else {
            b.abs = b
            not (a / b).is_positive
            (a / b).abs = -(a / b)
            (a / b).abs = a.abs / b.abs
        }
    } else {
        a.abs = a
        if b.is_negative {
            b.abs = -b
            not (a / b).is_positive
            (a / b).abs = -(a / b)
            (a / b).abs = a.abs / b.abs
        } else {
            b.abs = b
            not (a / b).is_negative
            (a / b).abs = (a / b)
            (a / b).abs = a.abs / b.abs
        }
    }
}

