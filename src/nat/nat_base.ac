theorem lte_cancel_suc(a: Nat, b: Nat) { a.suc <= b.suc implies a <= b } by {
    let c: Nat satisfy { a.suc + c = b.suc }
    a.suc + c = b.suc
    (a + c).suc = b.suc
    a + c = b
    a <= b
