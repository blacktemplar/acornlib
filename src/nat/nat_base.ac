    a.suc + 0 = (a + 0).suc
    add_suc_left(a, 0)
    forall(x: Nat) {
        if f(x) {
            add_suc_left(a, x)
            a.suc + x.suc = (a + x.suc).suc
            add_suc_left(a, x.suc)
            f(x.suc)
