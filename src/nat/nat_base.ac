theorem trichotomy(a: Nat, b: Nat) { a < b or b < a or a = b } by {
    define f(x: Nat) -> Bool { trichotomy(a, x) }
    if not trichotomy(a, 0) {
        a != 0
        not 0 < a
        0 + a != 0
        false
    }
    trichotomy(a, 0)
    f(0)
    forall(x: Nat) {
        if f(x) {
            trichotomy(a, x)
            a < x or x < a or a = x
            if a < x {
                x <= x.suc
                a < x.suc
                trichotomy(a, x.suc)
                f(x.suc)
            }
            if x < a {
                x.suc = a or x.suc < a
                if x.suc = a {
                    f(x.suc)
                } else {
                    trichotomy(a, x.suc)
                    f(x.suc)
                }
            }
            if a = x {
                a < x.suc
                trichotomy(a, x.suc)
                f(x.suc)
            }
            f(x.suc)
        }
    }
    trichotomy(a, b)
}

