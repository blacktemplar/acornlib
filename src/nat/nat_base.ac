theorem mul_zero_left(a: Nat) { 0 * a = 0 } by {
    mul_zero_left(0)
    forall(x: Nat) {
        if mul_zero_left(x) {
            0 + 0 * x = 0
            0 * x.suc = 0
            mul_zero_left(x.suc)
