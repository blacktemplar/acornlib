theorem mul_assoc(a: Nat, b: Nat, c: Nat) { a * b * c = a * (b * c) } by {
    define f(x: Nat) -> Bool { mul_assoc(x, b, c) }
    0 * b * c = 0 * (b * c)
    mul_assoc(0, b, c)
    forall(x: Nat) {
        if f(x) {
            mul_assoc(x, b, c)
            x * b * c = x * (b * c)
            x.suc * b * c = (b + x * b) * c
            (b + x * b) * c = b * c + x * b * c
            x.suc * b * c = b * c + x * b * c
            x.suc * b * c = b * c + x * (b * c)
            x.suc * b * c = x.suc * (b * c)
            mul_assoc(x.suc, b, c)
            f(x.suc)
        }
    }
    mul_assoc(a, b, c)
}

