theorem add_comm(a: Nat, b: Nat) { a + b = b + a } by {
    define f(x: Nat) -> Bool { add_comm(x, b) }
    b + 0 = 0 + b
    add_comm(0, b)
    forall(x: Nat) {
        if f(x) {
            add_comm(x, b)
            b + x.suc = (x + b).suc
            b + x.suc = x.suc + b
            add_comm(x.suc, b)
            f(x.suc)
        }
    }
    add_comm(a, b)
}

theorem add_assoc(a: Nat, b: Nat, c: Nat) { a + b + c = a + (b + c) } by {
    define f(x: Nat) -> Bool { add_assoc(x, b, c) }
    forall(x: Nat) {
        if f(x) {
            x.suc + b + c = (x + b + c).suc
            add_assoc(x, b, c)
            x.suc + b + c = x.suc + (b + c)
            add_assoc(x.suc, b, c)
            f(x.suc)
        }
    }
    0 + b + c = 0 + (b + c)
    add_assoc(0, b, c)
    add_assoc(a, b, c)
}

